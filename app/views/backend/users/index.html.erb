<% provide(:title, 'User List') %>
<h1><%= yield(:title) %></h1>

<table>
  <tr>
    <th>ID.</th>
    <th>Name</th>
    <th>Email</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.created_at %></td>
    <td><%= user.updated_at %></td>
    <td><%= link_to 'Show', backend_user_path(user) %></td>
    <td><%= link_to 'Edit', edit_backend_user_path(user) %></td>
    <td><%= link_to 'Destroy', backend_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_backend_user_path %>
